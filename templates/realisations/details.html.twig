{% extends 'base.html.twig' %}

{% block title %}
	{{realisation.nom}}
{% endblock %}
{% block body %}
	<section class=" container pt-md-11 mt-6 mb-6">
		<div class="row" style="    justify-content: center; margin-right: 1rem;padding-left: 2rem;padding-left: 2rem;">

			<div class="row align-items-center" style="justify-content: space-between;">

				<div class="col-12 col-md-7 order-md-2">
					<!-- Image -->
					{# <img src="https://images.pexels.com/photos/7018406/pexels-photo-7018406.jpeg?auto=compress&cs=tinysrgb&dpr=1&w=500" class="img-fluid mb-6 mb-md-0" alt="..." style="width: 100%;"> #}

						<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel"> <div class="carousel-inner">
							<div class="carousel-item active">
								<img src="{{vich_uploader_asset(realisation.images.toArray()[0], 'imageFile')|imagine_filter('detail')}}" class="d-block w-100" alt="...">


							</div>
							{% for img in realisation.images.toArray() %}
								{% if img.nom != realisation.images.toArray()[0]. nom %}
									<div class="carousel-item">
										<img src="{{vich_uploader_asset(img, 'imageFile')|imagine_filter('detail')}}" class="d-block w-100" alt="...">


									</div>
								{% endif %}


							{% endfor %}

						</div>
						<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Previous</span>
						</button>
						<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="visually-hidden">Next</span>
						</button>
					</div>

				</div>
				<div
					class="col-12 col-md-4 order-md-1">

					<!-- Heading -->
					<h1 class="display-4 text-primary">

						{{realisation.nom}}
						{# <br>
																																																																																																																																																																																																																														<span class="text-primary">the rich blog post options.</span> #}
					</h1>

					<!-- Text -->
					<p class="lead text-muted mb-0">
						{{realisation.description}}
					</p>

				</div>
			</div>
			<!-- / .row -->
		</div>
		<!-- / .container -->
	</section>

{% endblock %}
