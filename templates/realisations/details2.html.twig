{% extends 'base.html.twig' %}

{% block title %}
	{{realisation.nom}}
{% endblock %}

{% block body %}

	<section data-jarallax data-speed=".8" class="pt-15 pt-md-15 pb-12 pb-md-14 overlay overlay-black overlay-60 bg-gray-900 jarallax" style="margin-top: -87px; background-image: url({{vich_uploader_asset(realisation, 'imageFile', 'App\\Entity\\Realisation')|imagine_filter('welcome')}});">

		<div class="container">
			<div class="row justify-content-center">
				<div
					class="col-12 col-md-10 col-lg-7 text-center">

					<!-- Headin -->
					<h1 class="display-2 fw-bold text-white">
						{{realisation.Nom}}
					</h1>
					<p class="lead text-white-75 mb-4">
						{{realisation.description}}
					</p>
				</div>
			</div>
			<!-- / .row -->
		</div>
		<!-- / .container -->
	</section>
	<div class="position-relative">
		<div class="shape shape-bottom shape-fluid-x text-light">
			<svg viewbox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 48h2880V0h-720C1442.5 52 720 0 720 0H0v48z" fill="currentColor"/></svg>
		</div>
	</div>


	<section class="py-8 py-md-11 mt-n10 mt-md-n14">
		<div class="container">
			<div class="row" id="portfolio" data-isotope='{"layoutMode": "masonry"}' style="--bs-gutter-x: 2.4rem !important;">

				{% for img in realisation.images %}
					<div
						class=" col-12 col-md-4 resources">

						<!-- Image -->

						<div class="  card card-flush mb-7" href="#!">
							<div class=" card-zoom " data-bigpicture='{"imgSrc" : "{{vich_uploader_asset(img, "imageFile")|imagine_filter("full")}}"}'>


								<img class="card-img  " src="{{vich_uploader_asset(img, 'imageFile')|imagine_filter('portfolio')}}" alt="...">


							</div>
						</div>


					</div>
				{% endfor %}


			</div>
		</div>
	</section>

{% endblock %}
