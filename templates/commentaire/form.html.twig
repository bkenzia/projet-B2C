<section class="pt-6 pt-md-8">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-12 d-flex justify-content-center">
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{message}}
					</div>

				{% endfor %}
			</div>
		</div>
	</div>
</section>
<section class="pt-6 pt-md-8">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-12 d-flex justify-content-center">
				<button type="button" class="btn btn-secondary mb-5" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
					laisser un commentaire
				</button>
			</div>
		</div>
	</div>
</section>

<!-- Modal -->
<section>
	<div class="modal fade" id="staticBackdrop" class='lili' data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
		<div class="modal-dialog   main pt-0">

			<div class="modal-content ">
				<div class="modal-header">

					<h5 class="modal-title  mx-auto" id="staticBackdropLabel">Laisser un commentaire</h5>

					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="pb-5">
					{{form_start(form, {'attr':{'class':'text-center'}})}}


					{{form_widget(form.auteur)}}
					<br><br>
					{{ form_widget(form.email) }}
					<br><br>

					{{ form_widget(form.contenu) }}
					<br><br>

					<div class="text-center">


						{{ form_widget(form.Soumetre,{'attr':{'class':'navbar-btn btn btn-sm btn-primary lift ms-auto bnt-contacte'}}) }}


					</div>


					{{form_end(form)}}


				</div>

			</div>
		</div>
	</div>
</section>
