{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}
	<div class="lili ">
		<div class="main">
			<div
				class="register">

				<!--end register-->
				<h2 class="pt-5 pb-0">Contacter nous
				</h2>
				{{form_start(form,{'attr':{'id':'register'}})}}
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{message}}
					</div>
				{% endfor %}
				{{form_widget(form.nom,{'attr':{'id':'name'}})}}
				<br><br>
				{{ form_widget(form.email) }}
				<br><br>

				{{ form_widget(form.message) }}
				<br><br>

				<div class="text-center">


					{{ form_widget(form.envoyer) }}
				</div>

				{{form_end(form)}}
			</div>
		</div>
	</div>
{% endblock %}
