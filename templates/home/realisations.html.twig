<!-- SHAPE -->
<div class="position-relative">
	<div class="shape shape-bottom shape-fluid-x text-light">
		<svg viewbox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 48h2880V0h-720C1442.5 52 720 0 720 0H0v48z" fill="currentColor"/></svg>
	</div>
</div>


<section class="pt-8 pt-md-11">
	<div class="container">
		<div class="row ">
			<div
				class="col-12">
				<!-- Heading -->

				<h2 class="mb-0">
					Dernières réalisations</h2>
			</div>
			<!-- -->
			<p class="mb-5 text-muted">
				These span the grid's entre width with sevral option
			</p>

		</div>

		<div class="row">
			{% set i = 0 %}


			{% for realisation in realisations %}


				<div class="col-12">

					<div class="card card-row shadow-light-lg mb-6 lift lift-lg" {% if i is divisible by(2) %} data-aos="fade-right" {% else %} data-aos="fade-left" {% endif %}>


						<div class="row gx-0">

							<a
								 class="col-12 col-md-6 bg-cover {% if i is divisible by(2) %} card-img-start  {% else %} card-img-end order-md-2{% endif %}" style=" background-image: url({{realisation.file}});" href=" #!">


								<!-- Image (placeholder) -->
								<img
								src="{{realisation.file}}" alt="..." class="img-fluid d-md-none invisible">


								<!-- Shape -->
								<div class="shape {% if i is divisible by(2) %} shape-end {% else %} shape-start {% endif %}  shape-fluid-y text-white d-none d-md-block over-flow">


									<svg viewbox="0 0 112 690" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="{% if i is divisible by(2) %} M116 0H51v172C76 384 0 517 0 517v173h116V0z {% else %} M0 0h62.759v172C38.62 384 112 517 112 517v173H0V0z {% endif %}" fill="currentColor"/></svg>


								</div>

							</a>
							<div
								class="col-12 col-md-6 order-md-1">

								<!-- Body -->
								<a
									class="card-body" href="#!">

									<!-- Heading -->
									<h3>
										{{realisation.nom}}
									</h3>

									<!-- Text -->
									<p class="mb-0 text-muted">
										{{realisation.description|u.truncate(200,'...',false)}}
									</p>

								</a>

								<!-- Meta -->
								<a
									class="card-meta" href="#!">

									<!-- Divider -->
									<hr
									class="card-meta-divider">


									<!-- Date -->
									<p class="h6 text-uppercase text-muted mb-0 ms-auto">
										<time datetime="2019-05-29">Ajoutée le
											{{realisation.createdAt|date('d-m-Y') }}</time>

									</p>

								</a>

							</div>

						</div>
					</div>
				</div>

				{% set i = i +1 %}


			{% endfor %}


		</div>

	</div>


</section>
